<!doctype html>
<html>
<head>
    <title>Edit project</title>
</head>
<body>
<div class="container">
<div class="col-sm-6 col-sm-offset-3">
    <form action="/<%= project._id%>/editall/post" method="post">
        <div class="form-group">
            <label>Naziv</label>
            <input type="text" class="form-control" name="naziv_projekta" value=<%= project.naziv_projekta %>>
        </div>
        <div class="form-group">
            <label>Opis</label>
            <input type="text" class="form-control" name="opis_projekta" value=<%= project.opis_projekta %>>
        </div>
        <div class="form-group">
            <label>Cijena</label>
            <input type="number" min="0" class="form-control" name="cijena_projekta" value=<%= project.cijena_projekta %>>
        </div>
        <div class="form-group">
            <label>Obavljeni poslovi</label>
            <input type="text" class="form-control" name="obavljeni_poslovi" value=<%= project.obavljeni_poslovi %>>
        </div>
        <div class="form-group">
            <label>Pocetak projekta</label>
            <input type="date" class="form-control" name="datum_pocetak" value=<%= project.datum_pocetak %>>
        </div>
        <div class="form-group">
            <label>Zavrsetak projekta</label>
            <input type="date" class="form-control" name="datum_zavrsetak" value=<%= project.datum_zavrsetak %>>
        </div>
        <div class="form-group" style="visibility: hidden;">
                <input type="textarea" name="clanovi" value=<%= project.clanovi %>>
        </div>
        <button type="submit" class="btn btn-warning btn-lg">Submit</button>
    </form>
</div>
</div>
</body>
</html>